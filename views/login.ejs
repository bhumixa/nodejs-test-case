

<input type="hidden" id="page" name="page" value="<%=page%>">
<div class="col-sm-6 col-sm-offset-3">
        <nav class="navbar navbar-inverse> 
            <div>
              <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                  <li><a  id="clicklogin">Login</a></li>
                  <li><a id="clicksign" id="signup">Sign Up</a></li>
                </ul>
              </div>
            </div>
        </nav>
        <div class="panel panel-default" id="login">
            <div class="panel-body">
                <h2> Login </h2>
                <form action="/authenticate" method="post">
                    <div class="errors"> <%=message%> </div>
                    <div class="form-group">
                      <label>Username*:</label>
                      <input type="text" name="name" placeholder="Username" id="loginname">
                    </div>
                    <div class="form-group">
                      <label>Password*:</label>
                      <input type="password" name="password" placeholder="Password" id="loginpwd">
                    </div>

                    <button id="login" class="btn btn-primary btn-lg">Login</button>
                </form>
            </div>
        </div>
        <div class="panel panel-default" id="signup">
            <div class="panel-body">
                <h2> Sign Up </h2>
                <form action="/register" method="post">
                    <div class="errors"> <%=message%> </div>
                    <div class="form-group">
                      <label>Username*:</label>
                      <input type="text" name="name" placeholder="Username" id="name">
                    </div>
                    <div class="form-group">
                      <label>Password*:</label>
                      <input type="password" name="password" placeholder="Password" id="password">
                    </div>
                    <div class="form-group">
                      <label>Confirm Password*:</label>
                      <input type="password" name="confirmpassword" placeholder="Confirm Password" id="confirmpassword">
                    </div>
                    <button id="submit" type="submit" class="btn btn-primary btn-lg">Register</button>
                </form>
            </div>
        </div>
</div>
